  <body>
    <nav class="is_active" id="nav">
      <div class="logo-content">
        <i class="fas fa-book"  style="visibility: hidden;"></i>
        <h3>iLearn</h3>
        <i class="fas fa-bars" style="visibility: hidden;"></i>
